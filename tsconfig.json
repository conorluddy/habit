{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./",
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*.ts"],
  "files": [
    "src/config.ts",
    "src/dom.ts",
    "src/habits-ui.ts",
    "src/main.ts",
    "src/types.ts"
  ]
}
